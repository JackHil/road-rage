#!/bin/bash

. common

SRCS=`find utexas/ -name '*.scala' -print | xargs`
BUILD_OPTS="-d .build -deprecation -unchecked -feature -cp $FULL_CP"
FAST=""
COMPILER="scalac"
#FAST="-Xelide-below 3000"   # disables asserts, timers, and stats

echo Compiling...
mkdir -p .build
$COMPILER $BUILD_OPTS $FAST $SRCS

# How did the compile go?
if [[ $? != "0" ]]; then
  exit 1
fi
